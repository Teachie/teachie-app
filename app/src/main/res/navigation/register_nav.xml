<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_nav"
    app:startDestination="@id/createAccountFragment">

    <fragment
        android:id="@+id/createAccountFragment"
        android:name="id.teachly.ui.register.fragments.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account">
        <action
            android:id="@+id/action_createAccountFragment_to_fillDataAcountFragment"
            app:destination="@id/fillDataAcountFragment">
            <argument
                android:name="amount"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/fillDataAcountFragment"
        android:name="id.teachly.ui.register.fragments.FillDataAcountFragment"
        android:label="fragment_fill_data_acount"
        tools:layout="@layout/fragment_fill_data_acount">
        <action
            android:id="@+id/action_fillDataAcountFragment_to_uploadPhotoFragment"
            app:destination="@id/uploadPhotoFragment" />
        <action
            android:id="@+id/action_fillDataAcountFragment_to_addInterestFragment"
            app:destination="@id/addInterestFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/fillDataAcountFragment" />
    </fragment>
    <fragment
        android:id="@+id/uploadPhotoFragment"
        android:name="id.teachly.ui.register.fragments.UploadPhotoFragment"
        android:label="fragment_upload_photo"
        tools:layout="@layout/fragment_upload_photo" />
    <fragment
        android:id="@+id/addInterestFragment"
        android:name="id.teachly.ui.register.fragments.AddInterestFragment"
        android:label="fragment_add_interest"
        tools:layout="@layout/fragment_add_interest" />
</navigation>